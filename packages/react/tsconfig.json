{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./src/**/tests", "./dist"]
}
